<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.deliverymanagement">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DeliveryManagement">
        <activity android:name=".controllers.ProfileUpdateActivity"></activity>
        <activity android:name=".controllers.AdminActivity" />
        <activity android:name=".controllers.ForgetPasswordActivity" />
        <activity android:name=".controllers.ProfilActivity" />
        <activity android:name=".controllers.DeliveryDetailsActivity" />
        <activity android:name=".controllers.UsersDetailsActivity" />
        <activity android:name=".controllers.UsersListActivity" />
        <activity android:name=".controllers.DeliveryListActivity" />
        <activity android:name=".controllers.DeliveryFormActivity" />
        <activity android:name=".controllers.RegisterActivity" />
        <activity android:name=".controllers.LoginActivity" />
        <activity android:name=".controllers.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.MainActivity" />
    </application>

</manifest>